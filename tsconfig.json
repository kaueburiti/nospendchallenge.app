{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "seed.ts",
    "seed.config.ts"
  ],
  "exclude": [
    "node_modules",
    "*.config.js",
    "config.js",
    ".eslintrc.js",
    "supabase/functions/"
  ]
}
